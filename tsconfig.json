{
    "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "allowJs": true,
      "strict": true,
      "baseUrl": "./",
      "importHelpers": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "suppressImplicitAnyIndexErrors": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "declaration": true,
      "lib": ["ES2015", "DOM", "es5", "es2015.promise", "es2015", "es2017", "esnext"]
    },
    "exclude": ["node_modules/**"],
    "include": ["src/**/*", "index.ts"]
  }
  